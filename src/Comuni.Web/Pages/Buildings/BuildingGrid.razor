<CascadingValue Value="building">
    <div class="grid grid-cols-2 md:grid-cols-6 gap-4 mt-8">
        @foreach (var card in Cards)
        {
            <BuildingCard Building="card" OnBuildingSelected="BuildingSelected" />
        }
    </div>
</CascadingValue>

<p class="m-4 p-2 bg-gray-400">@info</p>

@code {
    private Building building;

    [Parameter]
    public IEnumerable<Building> Cards { get; set; }


    string info = "";

    private void BuildingSelected(Building building)
    {
        info = building.ToString();
    }

}
