@page "/"

<CascadingValue Value="game">
    <ConstructionModal @ref="constructionModal">

    </ConstructionModal>
</CascadingValue>


<CustomButton OnClick="ShowConstructionModal" Height="CustomButton.ButtonHeight.Small">

    Build

</CustomButton>

@code
{
    private Game? game;
    private ConstructionModal? constructionModal;

    protected override void OnInitialized()
    {
        game = new Game();
    }

    private void ShowConstructionModal()
    {
        constructionModal?.Show();
    }
}
