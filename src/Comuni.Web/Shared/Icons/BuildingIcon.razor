@if (BuildingType.Equals(BuildingTypeFactory.Economic))
{
    <GoldIcon />
}
else
{
    @if (BuildingType.Equals(BuildingTypeFactory.Military))
    {
        <ArmyIcon />
    }
    else
    {
        @if (BuildingType.Equals(BuildingTypeFactory.Cultural))
        {
            <CraftsmanIcon />
        }
        else
        {
            @if (BuildingType.Equals(BuildingTypeFactory.Religious))
            {
                <PilgrimIcon />
            }
            else
            {
                    <WallIcon />
            }
        }
    }
}

    @code {
        [Parameter]
        public BuildingType BuildingType { get; set; }
    }
