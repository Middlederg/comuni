<div class="w-full text-white bg-@color-700 mb-8 border-@color-900 border-b-2">
    <div class="flex flex-row items-center justify-between py-2 md:py-3 px-4 md:px-8 ">
        <div class="flex flex-row items-center justify-between">
            <NavLink class=@brandClass
                     href="" Match="NavLinkMatch.All">
                Comuni
            </NavLink>
        </div>
        <nav class="flex justify-end items-center flex-row">
            <NavLink class="flex px-4 py-2 text-sm font-semibold rounded-lg outline-none focus:outline-none"
                     href="main" ActiveClass=@activeClass>

                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="hidden md:block md:ml-2">
                    New game
                </span>
            </NavLink>

            <NavLink class="flex px-4 py-2 text-sm font-semibold rounded-lg outline-none focus:outline-none"
                     href="options" ActiveClass=@activeClass>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5 4a1 1 0 00-2 0v7.268a2 2 0 000 3.464V16a1 1 0 102 0v-1.268a2 2 0 000-3.464V4zM11 4a1 1 0 10-2 0v1.268a2 2 0 000 3.464V16a1 1 0 102 0V8.732a2 2 0 000-3.464V4zM16 3a1 1 0 011 1v7.268a2 2 0 010 3.464V16a1 1 0 11-2 0v-1.268a2 2 0 010-3.464V4a1 1 0 011-1z">
                    </path>
                </svg>
                <span class="hidden md:block md:ml-2">
                    Options
                </span>
            </NavLink>
        </nav>
    </div>
</div>

@code {
    private string color = "blue";
    private string brandClass => $"text-lg font-semibold tracking-widest text-white " +
            $"hover:text-{color}-100 uppercase rounded-lg focus:outline-none focus:shadow-outline";
    private string activeClass => $"text-{color}-900  bg-white hover:bg-{color}-50";
}
